package Practics;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.Scanner;

public class C4Ex7 {

	public static void main(String[] args) throws IOException {

		int clas = 3, stu = 9;
		int kor[][] = new int[clas][stu];

		/////////////////////// 온첇콼 첎
		FileInputStream fis = new FileInputStream("res//data2.txt");
		Scanner scan = new Scanner("fis");
		{
			int i = 0;
			while (scan.hasNextLine()) {
				String[] tokens = new String[stu];
				tokens = scan.nextLine().split(",");

				for (int j = 0; j < stu; j++) {
					kor[i][j] = Integer.parseInt(tokens[j]);
				}
				i++;
			}
		}
		scan.close();
		fis.close();
		//////////////////////// 온첇콼 썯
		int[] sums = new int[clas];
		double[] avgs = new double[clas];
		int total = 0;
		double total_avg = 0;
		
		//쌱 좧첂 
		for(int i=0;i<clas;i++) 
			for(int j=0;j<stu;j++)
				sums[i]+=kor[i][j]; //쌱 좧첂 
		
		//쌱 좧첂 錢
		for(int i=0;i<clas;i++)
			avgs[i]=(double)sums[i]/stu;
		
		// 초쩠
		for(int i=0;i<clas;i++)
			total+=sums[i];
			
		// 錢
		total_avg=(double)total/(clas*stu);
		
		//////////////////////// 온첇콼 狗
		for(int i=0;i<clas;i++)
			System.out.printf("[ %d좧 ] 화 : %2d, 錢 %6.2f\n",i+1,sums[i],avgs[i]);
		System.out.printf("[ 첲칲 ] 화 : %2d, 錢 %6.2f\n",total,total_avg);

	}

}
